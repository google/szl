#!/bin/env szl
#szl_options

#desc: How can we have multiple statements inside for-braces?.
a: int = 0;
b: int = 0;

for (; a < 4; {a++; b++}) {
    DEBUG("print", "(inside for) a = %d, (a < 4) == %b\n", a, a < 4);

    for (; b < 4; b++) {
        DEBUG("print", "(inside for) b = %d, (b < 4) == %b\n", b, b < 4);
    }
}
